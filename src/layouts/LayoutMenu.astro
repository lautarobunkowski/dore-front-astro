---
import Layout from '../layouts/Layout.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
    <main>
        <div class="mb-5">
            <a href="/">
				<img src="/logo-dore.svg" alt="dore-delicias" class="w-[120px] md:w-[182px]">
			</a>
        </div>
        <slot></slot>
    </main>
</Layout>

<style>
	main {
		margin: auto;
		width: 100%;
		max-width: 600px;
		color: white;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
        padding: 10px;
	}
</style>